<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textViewBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bitmap_titleTextView"
        android:text="收据"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bitmap_codeTextView"
        android:text="1f5s2d"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bitmap_titleTextView"/>

    <TextView
        android:text="2018年12月1日"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bitmap_timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/bitmap_titleTextView"
        app:layout_constraintBottom_toBottomOf="@id/bitmap_titleTextView"/>

    <android.support.v7.widget.GridLayout
        android:id="@+id/bitmap_gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/deepDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitmap_titleTextView"
        app:layout_constraintBottom_toBottomOf="parent">
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>